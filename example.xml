<?xml version="1.0" encoding="UTF-8"?>

<manifest>

    <remote name="vendor"
            fetch="https://github.com"
            revision="BRANCH" />
	
    <remote name="device"
            fetch="https://github.com"
            revision="BRANCH"/>

    <remote name="kernel"
            fetch="https://github.com"
            revision="BRANCH"/>

    <!--Device Trees-->
    <project path="device/MANUFACTURER_in_lowercase/DEVICE_CODENAME" name="GITHUB_USERNAME/GITHUB_REPO" remote="device" />


    <!--Kernel-->
    <project path="kernel/MANUFACTURER_in_lowercase/DEVICE_CODENAME" name="GITHUB_USERNAME/GITHUB_REPO" remote="kernel" />


    <!-- Vendor folders -->
    <project path="vendor/MANUFACTURER_in_lowercase/DEVICE_CODENAME" name="GITHUB_USERNAME/GITHUB_REPO" remote="vendor" />
</manifest>
